<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="Member"> 
 	<!-- 회원가입 처리 -->
 	<insert id="memberJoin" parameterType="member">
 	INSERT INTO MEMBER VALUES(
 		#{id},#{password},#{name},#{phone},#{birth},0,#{address_number},#{address_a},#{address_b},#{address_c},#{email})
 	</insert>
 	<insert id="navermemberjoin" parameterType="member">
 	INSERT INTO MEMBER VALUES(
 		#{id},#{password},#{name},#{phone},#{birth},1,#{address_number},#{address_a},#{address_b},#{address_c},#{email})
 	</insert>
 	<!-- 아이디 중복확인 -->
 	<select id="Join_IdCheck" parameterType="String" resultType="String">
 	SELECT ID FROM MEMBER WHERE ID=#{id}
 	</select>
 	<!-- 이름 중복확인 -->
 	<select id="nameOverlap" parameterType="String" resultType="String">
 	SELECT NAME FROM MEMBER WHERE NAME=#{name}
 	</select>
 	<!-- 이메일 인증 -->
    <update id="approval_member" parameterType="member">
	UPDATE MEMBER SET APPOVAL_STATUS = 1 WHERE EMAIL = #{email}
    </update>
    <!-- 로그인  -->
    <select id="Login_Login" parameterType="member" resultType="member">
    SELECT * FROM MEMBER  WHERE ID=#{id} AND PASSWORD=#{password}
    </select>
     <!-- 비밀번호 변경 -->
	<update id="update_pw" parameterType="member">
		UPDATE MEMBER SET PASSWORD =#{password} WHERE ID = #{id}
	</update>
	<!-- 아이디 찾기 -->
	<select id="select_id" parameterType="member" resultType="String" >
	SELECT ID FROM MEMBER WHERE NAME=#{name} AND PHONE=#{phone} AND EMAIL=#{email}
	</select>
	<!-- 회원 탈퇴 -->
	<delete id="memberDelete" parameterType="member">
 	DELETE FROM MEMBER WHERE ID=#{id}
 	</delete>
 	<!-- 회원 상세 보기 -->
 	<select id="memberView" parameterType="member" resultType="member"> 
 	SELECT * FROM MEMBER WHERE ID=#{id}
 	</select>
 	<update id="memberModify" parameterType="member"> 
 	UPDATE MEMBER SET NAME=#{name},PHONE=#{phone},BIRTH=#{birth},ADDRESS_NUMBER=#{address_number},ADDRESS_A=#{address_a},ADDRESS_B=#{address_b},ADDRESS_C =#{address_c},EMAIL=#{email} WHERE ID=#{id}
 	</update>
</mapper>

